  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "outputCapture": "std",
    },

    {
      "name": "Current file (script)",
      "type": "node",
      "request": "launch",
      "program": "${file}"
    }
  ]
}
